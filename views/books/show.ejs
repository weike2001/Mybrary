<h2>
    <%= book.title %>
</h2>
<img src="<%= book.coverImagePath %>">
<div>Author: <%= book.author ? book.author.name : 'Unknown' %>
</div>
<div>Publish Date: <%= book.publishDate.toDateString() %>
</div>
<div>Page Count: <%= book.pageCount %>
</div>
<div>Page Description: <%= book.description %>
</div>

<a href="/books/<%= book.id %>/edit">Edit</a>
<%- include('../partials/deleteForm', { url: `/books/${book.id}`}) %>
    <a href="/authors/<%= book.author ? book.author.id : 'Unknown' %>">View Author</a>